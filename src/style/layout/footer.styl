.footer-overlay
  background: rgba(255,255,255,1)
  position: fixed
  bottom: 0
  height: 100%
  transform: translateY(90%)
  transition: background .2s linear
  transition: transform .3s ease-in-out
  overflow: hidden
  width: 100%
  &._active
    background: white
    transform: translateY(0%)
  .btn-form_activate
    background: #42496e
    margin: 12px auto
    opacity: 1
    padding: 10px 16px
    visibility: visible
    &._hide
      opacity: 0
      visibility: hidden
  .btn-form_close
    color: #42496e
    margin: 0 auto