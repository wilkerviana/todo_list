.navegation-menu
  display: flex
  background: lightblue
  .navegation-item
    font-size: 1.1em
    font-weight: 800
    text-transform: uppercase
    &[type="radio"]
      display: none
  label
    background: #ccc
    padding: 15px
    width: 50%
.btn-form_open
  background: darkgray
  margin: 12px auto
  opacity: 1
  padding: 10px 16px
  visibility: visible
  &._hide
    opacity: 0
    visibility: hidden