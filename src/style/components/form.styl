.form-todo
  margin: 0 auto
  height: 70%
  transform: translateY(100%)
  transition: transform .5s ease-in-out
  max-width: 300px
  &._active
    transform: translateY(0)
  .form-title
    color: #42496e
    margin: 20px 0
    text-align: center
    text-transform: uppercase
  fieldset
    border: none
    margin: 10px
    label
      display: block
      margin: 5px 0
    input
      border: 1px solid lightgray
      border-radius: 10px
      font-size: 0.925rem
      font-weight: 200
      padding: 10px 12px
      width: 100%
      &[type="date"]
        color: darkgray
        font-family: 'Rubik',sans-serif
      &:focus
        outline: none
        border-color: darkgray 
  .btn-form_save
    background: darkgray
    margin: 50px auto 0
    padding: 8px 10px